{
  "manifest_version": 3,
  "name": "LeagueHouse OP.GG Tools",
  "version": "1.1",
  "description": "Reorders summoners and provides role swap interface for OP.GG multisearch",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*.op.gg/*/lol/multisearch/*"],
      "js": ["src/utils.js", "src/reorder.js", "src/swap.js", "src/main.js"],
      "css": ["src/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["*://*.op.gg/*"]
    }
  ]
}