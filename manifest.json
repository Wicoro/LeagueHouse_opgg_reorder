{
  "manifest_version": 3,
  "name": "LeagueHouse OP.GG Tools",
  "version": "2.0",
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*.op.gg/*/lol/multisearch/*"],
      "js": ["src/utils.js", "src/reorder.js", "src/swap.js", "src/main.js"],
      "css": ["src/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["*://*.op.gg/*"]
    }
  ]
}